  },
  "keywords": [
    "mongoose",
    "unit-of-work",
    "transaction"
  ],
  "author": "Tauqeer Nasir",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tauqeernasir/mongoose-unit-of-work"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "mongoose": "^8.15.2"
  }
}
